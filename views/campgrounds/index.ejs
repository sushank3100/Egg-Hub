<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To Egghub</h1>
            <p>View Our hand-picked Posts Posted by our specialist </p>
            <p>
                <a class="btn btn-primary btn-md" href="/campgrounds/new">Add New Post</a>
            </p>
        </div>
    </header>

    <!-- If we want to display them in there original sizes -->
    <!-- style="display:flex; flex-wrap: wrap;" -->
    <div class="row text-center" >
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <img src="<%= campground.image %>">
                <div class="caption">
                    <h4><%= campground.name %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary" role="button">More Info</a>
                </p>
            </div>
        </div>
        <% })%>
    </div>
</div>
<%- include("../partials/footer") %>